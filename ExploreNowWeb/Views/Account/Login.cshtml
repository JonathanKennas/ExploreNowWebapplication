        <div class="jumbotron loginForm">
                @Html.LabelFor(m => m.Email, "E-post:")<br />
                @Html.TextBoxFor(m => m.Email)<br />
                @Html.LabelFor(M => M.Password, "Lösenord:")<br />
                @Html.PasswordFor(m => m.Password) <br />
                <button class="btn btn-default" type="submit">Logga in</button> <br />

                <h4>@Html.ActionLink("Skapa konto", "Register", "Account")</h4>
                <h4>@Html.ActionLink("Glömt lösenord?", "ForgotPassword", "Account") </h4>
